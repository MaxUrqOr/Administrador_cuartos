<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation|screenSize"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_makao"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_makao_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.SoftwareInquilinosJava"
        android:usesCleartextTraffic="true"
        android:windowSoftInputMode="adjustPan"
        tools:targetApi="31">
        <activity
            android:name=".MapaLicoreria"
            android:exported="false"
            android:theme="@style/Theme.MapaLicoreria" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/Api_Maps" />

        <activity
            android:name=".PasosPagoLicoreria"
            android:exported="false"
            android:label="@string/title_activity_mapa"
            android:theme="@style/Theme.Mapa" />
        <activity
            android:name=".OpcionPago"
            android:exported="false"
            android:theme="@style/Theme.OpcionPago" />
        <activity
            android:name=".splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.RecuperarCActivity"
            android:exported="false"
            android:theme="@style/Theme.Activity_RecuperarC" />
        <activity
            android:name=".login.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Activity_Login" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Activity_Main" />


        <service
            android:name=".mensages.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

    </application>

</manifest>