<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_Login"
    tools:context=".login.RecuperarCActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:fadeScrollbars="false"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tvTituloRecuperarC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/dmsans_18pt_black"
                    android:text="@string/titulo_recuperar_contrase"
                    android:textAlignment="center"
                    android:textColor="@color/morado_oscuro"
                    android:textSize="40sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSubtituloOC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/dmsans_18pt_regular"
                    android:text="@string/descripcionRecuperarContraseÃ±a"
                    android:textAlignment="center"
                    android:textColor="@color/color_letras"
                    android:textSize="15sp"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTituloRecuperarC" />

                <ImageView
                    android:id="@+id/imgLogoRC"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="48dp"
                    android:src="@drawable/img_logo_recuperar_contra"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="@+id/tvTituloRecuperarC"
                    app:layout_constraintStart_toStartOf="@+id/tvTituloRecuperarC"
                    app:layout_constraintTop_toBottomOf="@+id/tvSubtituloOC" />

                <TextView
                    android:id="@+id/tvUsuarioTitulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/dmsans_18pt_bold"
                    android:text="@string/usuario_login"
                    android:textColor="@color/color_letras"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgLogoRC" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiEdtLayoutRC"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:textColorHint="@color/color_letras"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/morado_oscuro"
                    app:hintTextColor="#3F13E4"
                    app:layout_constraintEnd_toEndOf="@+id/tvUsuarioTitulo"
                    app:layout_constraintStart_toStartOf="@+id/tvUsuarioTitulo"
                    app:layout_constraintTop_toBottomOf="@+id/tvUsuarioTitulo">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:drawableEnd="@drawable/ic_user_login"
                        android:drawableTint="@color/morado_oscuro"
                        android:fontFamily="@font/dmsans_18pt_regular"
                        android:hint="@string/ejemplo_correo_login"
                        android:inputType="textEmailAddress|textAutoComplete"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/color_letras"
                        android:textColorHint="#3F13E4"
                        android:textSize="19sp">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/appbuttonSolicitarCRC"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="52dp"
                    android:background="@drawable/background_button_solicitar_contrasena"
                    android:fontFamily="@font/dmsans_18pt_bold"
                    android:text="@string/btn1RC"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@+id/tvUsuarioTitulo"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/tvUsuarioTitulo"
                    app:layout_constraintTop_toBottomOf="@+id/tiEdtLayoutRC" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/appbuttonRegresarRC"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/background_button_regresar_rc"
                    android:fontFamily="@font/dmsans_18pt_bold"
                    android:text="@string/btn2RC"
                    android:textAllCaps="true"
                    android:textColor="@color/morado_oscuro"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@+id/appbuttonSolicitarCRC"
                    app:layout_constraintStart_toStartOf="@+id/appbuttonSolicitarCRC"
                    app:layout_constraintTop_toBottomOf="@+id/appbuttonSolicitarCRC" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:layout_constraintEnd_toEndOf="@+id/appbuttonRegresarRC"
                    app:layout_constraintStart_toStartOf="@+id/appbuttonRegresarRC"
                    app:layout_constraintTop_toBottomOf="@+id/appbuttonRegresarRC" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>