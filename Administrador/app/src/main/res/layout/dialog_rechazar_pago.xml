<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlancoProgress2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:background="@drawable/background_dialogs"
        android:elevation="8dp"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/ic_line_dialog"
            app:tint="@color/morado_oscuro" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/dmsans_18pt_bold"
            android:text="Se le notificará al usuario que su pago no fue validado "
            android:textAlignment="center"
            android:textColor="@color/morado_oscuro"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/dmsans_18pt_light"
            android:text="Elige la razón por la cual el pago no ha sido validado."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFotoI"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/background_btn_dialog"
            android:fontFamily="@font/dmsans_18pt_bold"
            android:text="FOTO INADECUADA"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMontoI"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_btn_dialog"
            android:fontFamily="@font/dmsans_18pt_bold"
            android:textSize="17sp"
            android:backgroundTint="#D6CDFE"
            android:textColor="@color/morado_oscuro"
            android:text="MONTO INCOMPLETO" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancelar"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:background="@drawable/background_btn_dialog"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:text="CANCELAR" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>